
<!DOCTYPE html>
<html lang="en">
<% include ../templates/head.ejs %>
<body>
<% include ../templates/home-navbar.ejs %>


    <div class="uk-container">
        <div class="uk-container uk-padding uk-width-1-3@s">
            <h2>Forgot Password</h2>
            <form class="uk-form" role="form" method="POST" action="/auth/reset_password" enctype="application/x-www-form-urlencoded">


                <label >E-mail</label>
                <input type="email" id="email" name="email" class="uk-input" placeholder="Email" required autofocus autocomplete="email">

                <div class="uk-flex uk-width-1-1 uk-flex-between uk-child-width-1-2">
                     <div><a href="/auth/login" class="uk-button uk-button-default uk-margin-small">Go back to the login page <i class="fa fa-arrow-left"></i></a></div>
                     <div><button type="submit" class="uk-button uk-button-primary uk-margin-small">Send reset email <i class="fa fa-envelope"></i></button></div>
                </div>
              </form>

          </div>
    </div>


<% if(message){%>
<%= message %>
<% }%>


<% include ../templates/scripts.ejs %>
</body>
<% include ../templates/foot.ejs %>
</html>
